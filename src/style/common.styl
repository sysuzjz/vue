global-reset()

html
	-webkit-tap-highlight-color transparent
	-webkit-touch-callout none
	height 100%

// font
body
	font-family 'Helvetica Neue', Helvetica, 'microsoft yahei', Arial, sans-serif
	// -webkit-font-smoothing antialiased
	// -moz-osx-font-smoothing grayscale
	text-size-adjust 100%
	font-size 13px
	color #333
	min-width 320px
	max-width 450px
	height 100%
	margin 0 auto
	background #f3f3f1

a
	text-decoration none
	cursor pointer

img
	max-width 100%

p
	margin 0

h1, h2, h3, h4, h5, h6, p, dl, dt, dd
	margin 0

ul, li
	list-style none
	padding 0
	margin 0

button, input
	outline none
	border 0

#app
	height 100%

.hide
	display none

.clearfix
	zoom:1

	&:after
		content "."
		display block
		height 0
		clear both
		visibility hidden

.float-left
	float left

.float-right
	float right

.icon
	display inline-block
	width 22px
	height 22px
	vertical-align middle
	background-size 100% 100%
	background-repeat no-repeat

.text-tip
	color red

.text-limit
	white-space nowrap
	overflow hidden
	word-break break-all
	text-overflow ellipsis

.mask
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0.7)
	z-index 99
